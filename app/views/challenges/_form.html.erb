<%= form_for @challenge, :html => {:class => 'sm-col-6'} do |f| %>
  
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, :autofocus => true %>
  
    <%= f.label :description %>
    <%= f.text_area :description %>
  
    <%= f.label :nominee_name %>
    <%= f.text_field :nominee_name %>
  
    <%= f.label :nominee_email %>
    <%= f.text_field :nominee_email %>

    <%= f.label :banner_image %>
    <%= f.url_field :banner_image %>

    <%= f.label :cause %>
    <%= f.text_field :cause %>

    <%= f.label :target %>
    <%= f.text_field :target %>

  <%= f.submit :class => 'h3 button button-big mb4 button-blue' %>

<% end %>