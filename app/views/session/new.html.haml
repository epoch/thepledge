%h2= flash[:error] if flash[:error].present?

%h1 Log in
= form_tag login_path do
  %div.form-group
    = label_tag :email
    = text_field_tag :email, nil, :autofocus => true, :class => 'form-control', :id => 'inputEmail'

    = label_tag :password
    = password_field_tag :password, nil, :class => 'form-control'

  = submit_tag 'Login', :class => 'btn btn-primary'