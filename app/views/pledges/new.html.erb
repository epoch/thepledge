<h1>Pledge</h1>

<%= form_for @pledge, :html => {:class => 'sm-col-6'} do |f| %>

    <%= f.label :amount %>
    <%= f.text_field :amount, :autofocus => true, :class => 'form-control' %>
  
    <%= f.label :reason %>
    <%= f.text_area :reason, :class => 'form-control' %>

    <%= f.submit :class => 'btn btn-primary' %>

<% end %>
